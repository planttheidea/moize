{
    "github": {
        "release": true,
        "tagName": "v${version}"
    },
    "hooks": {
        "before:init": [
            "npm run lint",
            "npm run typecheck",
            "npm run test",
            "npm run dist"
        ],
        "before:release": [
            "npm run docs",
            "git add .",
            "git commit -m 'Update docs'",
            "git push"
        ]
    }
}
