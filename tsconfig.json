{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": "src",
        "esModuleInterop": true,
        "jsx": "react",
        "lib": ["dom", "es2015"],
        "module": "esNext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "./dist",
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "es5"
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*", "__tests__/*", "dev/**/*"],
    "typedocOptions": {
        "out": "docs",
        "entryPoints": ["src/index.ts"]
    }
}
