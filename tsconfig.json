{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "lib": ["DOM", "ESNext"],
        "module": "esNext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "./dist",
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "ES2015"
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*", "__tests__/*", "dev/**/*"],
    "typedocOptions": {
        "out": "docs",
        "entryPoints": ["src/index.ts"]
    }
}
